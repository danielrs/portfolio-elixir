<section class="main-section">
  <div class="container container--small">
    <%# <h2 class="header--main">Posts</h2> %>

    <%= if @conn.params["tag"] && @conn.params["tag"] != "" do %>
      <div class="tag-info">
        <span>
          Showing <%= render "_tag.html", conn: @conn, tag: %{name: @conn.params["tag"]} %> posts.
          <a href="<%= blog_path(@conn, :index) %>">Clear</a>
        </span>
      </div>
    <% end %>

    <%= if not Enum.empty?(@paginator.entries) do %>
      <%= render "_post-list.html", (assigns |> Map.merge(%{posts: @paginator.entries, paginator?: true})) %>
    <% else %>
      <p>No posts to list</p>
    <% end %>

  </div>
<section>
